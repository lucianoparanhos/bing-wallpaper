<Page
    x:Class="UWP_Bing_Wallpaper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UWP_Bing_Wallpaper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  This top margin is the height of the custom TitleBar  -->
        <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
    </Page.Resources>

    <Grid>
        <Border
            x:Name="AppTitleBar"
            Height="40"
            Margin="48,8,0,0"
            VerticalAlignment="Top"
            Background="Transparent"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="AppFontIcon"
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="Assets/Square44x44Logo.png" />
                <TextBlock
                    x:Name="AppTitle"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Test App Title" />
            </StackPanel>
        </Border>
        <muxc:NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            Header="Title"
            IsBackButtonVisible="Visible"
            IsTitleBarAutoPaddingEnabled="False">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Bing.com" Icon="Target" />
            </muxc:NavigationView.MenuItems>
            <Grid Margin="50,0,0,0">

                <Grid>
                    <StackPanel Orientation="Horizontal">

                        <StackPanel Orientation="Vertical">
                            <FlipView
                                x:Name="Gallery"
                                Height="360"
                                MaxWidth="640"
                                BorderBrush="Black"
                                BorderThickness="6,6,6,6" />


                            <muxc:PipsPager
                                x:Name="FlipViewPipsPage"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Center"
                                NextButtonVisibility="Visible"
                                PreviousButtonVisibility="Visible"
                                SelectedPageIndex="{x:Bind Path=Gallery.SelectedIndex, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <ComboBox
                                x:Name="localeComboBox"
                                Width="330"
                                DisplayMemberPath="NativeName"
                                Header="Locale"
                                ItemsSource="{x:Bind BingCultures}"
                                SelectedItem="{x:Bind}" />

                            <HyperlinkButton x:Name="BingHyperLink" FontSize="26" />
                            <TextBlock x:Name="BingCopyright" />



                        </StackPanel>
                    </StackPanel>

                </Grid>

            </Grid>
        </muxc:NavigationView>
    </Grid>

</Page>
